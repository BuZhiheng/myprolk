<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:paddingTop="@dimen/common_margin_large"
    android:background="@color/color_bg"
    >
    <LinearLayout
        android:id="@+id/ll_popwinshare_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/ll_popwinshare_qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_share_qq"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:gravity="center"
                android:text="分 享 到手机QQ"
                android:textSize="@dimen/text_common_item_content"
                android:textColor="@color/color_black_text"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_popwinshare_qzone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_share_qzone"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:gravity="center"
                android:text="分 享 到QQ空间"
                android:textSize="@dimen/text_common_item_content"
                android:textColor="@color/color_black_text"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_popwinshare_wx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_share_wx"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:gravity="center"
                android:text="发 送 给微信好友"
                android:textSize="@dimen/text_common_item_content"
                android:textColor="@color/color_black_text"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_popwinshare_wxsquare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_share_wxsquare"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:gravity="center"
                android:text="分 享 到朋友圈"
                android:textSize="@dimen/text_common_item_content"
                android:textColor="@color/color_black_text"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_popwinshare_cancel"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="@dimen/common_margin"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="@color/color_white"
        android:text="取消"
        android:textSize="@dimen/text_common_item_title"
        android:textColor="@color/color_black_text"
        />
</FrameLayout>