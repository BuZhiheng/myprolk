            </FrameLayout>
            <include layout="@layout/include_slid_img_marginleft"/>
            <FrameLayout
                android:id="@+id/fl_talkfrm_cook"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_ll_bg"
                android:clickable="true"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@drawable/ic_talk_menu"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="小吃菜谱"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <TextView
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="39dp"
                    android:textSize="@dimen/text_common_item_content"
                    android:textColor="@color/color_gray_deep"
                    />
                <ImageView
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/common_margin"
                    android:src="@drawable/ic_common_right_green"/>
            </FrameLayout>
            <include layout="@layout/include_slid_img_marginleft"/>
            <FrameLayout
                android:id="@+id/fl_talkfrm_food"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_ll_bg"
                android:clickable="true"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@drawable/ic_talk_food"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="健康饮食"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <TextView
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="39dp"
                    android:textSize="@dimen/text_common_item_content"
                    android:textColor="@color/color_gray_deep"
                    />
                <ImageView
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/common_margin"
                    android:src="@drawable/ic_common_right_green"/>
            </FrameLayout>
            <include layout="@layout/include_slid_img_marginleft"/>
            <FrameLayout
                android:id="@+id/fl_talkfrm_jock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_ll_bg"
                android:clickable="true"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@drawable/ic_talk_jock"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="笑话精选"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <TextView
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="39dp"
                    android:textSize="@dimen/text_common_item_content"
                    android:textColor="@color/color_gray_deep"
                    />
                <ImageView
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/common_margin"
                    android:src="@drawable/ic_common_right_green"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>