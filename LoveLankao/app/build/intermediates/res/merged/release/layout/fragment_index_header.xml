<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner_indexfrm"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:canLoop="true"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_indexfrm_service"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scrollbars="none"
        />
    <include layout="@layout/include_slid_img_height5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:id="@+id/fl_indexfrm_more_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_ll_bg"
                android:paddingTop="@dimen/common_margin"
                android:paddingBottom="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:paddingLeft="@dimen/common_margin_large"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聊天室"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进来聊聊吧"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray"
                    />
                <ImageView
                    android:layout_gravity="center|right"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:src="@drawable/ic_indexfrm_chat"/>
            </FrameLayout>
            <include layout="@layout/include_slid_img_vertical_margintop"/>
            <FrameLayout
                android:id="@+id/fl_indexfrm_more_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_ll_bg"
                android:paddingTop="@dimen/common_margin"
                android:paddingBottom="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin_large"
                android:paddingLeft="@dimen/common_margin"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="找菜谱"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今天的饭我来!"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray"
                    />
                <ImageView
                    android:layout_gravity="center|right"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:src="@drawable/ic_indexfrm_menu"/>
            </FrameLayout>
        </LinearLayout>
        <include layout="@layout/include_slid_img_margin_lr"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:id="@+id/fl_indexfrm_more_eat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_ll_bg"
                android:paddingTop="@dimen/common_margin"
                android:paddingBottom="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:paddingLeft="@dimen/common_margin_large"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康饮食"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="民以食为天"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray"
                    />
                <ImageView
                    android:layout_gravity="center|right"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:src="@drawable/ic_indexfrm_eat"/>
            </FrameLayout>
            <include layout="@layout/include_slid_img_vertical_marginbottom"/>
            <FrameLayout
                android:id="@+id/fl_indexfrm_more_jock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_ll_bg"
                android:paddingTop="@dimen/common_margin"
                android:paddingBottom="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin_large"
                android:paddingLeft="@dimen/common_margin"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="笑话"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="从前有座山"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray"
                    />
                <ImageView
                    android:layout_gravity="center|right"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:src="@drawable/ic_indexfrm_jock"/>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/include_slid_img_height5"/>
    <FrameLayout
        android:id="@+id/fl_indexfrm_more_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_ll_bg"
        android:paddingBottom="@dimen/common_margin"
        android:paddingTop="@dimen/common_margin"
        android:clickable="true">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="兰考新闻"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
        <TextView
            android:layout_gravity="center_vertical|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="查看更多"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_green"
            />
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@drawable/ic_common_right_green"/>
    </FrameLayout>
</LinearLayout>