<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/common_margin"
        >
        <ImageView
            android:id="@+id/iv_msg_board_item_photo"
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_msg_board_item_nickname"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/common_margin_little"
                android:text="@string/app_test"
                android:textColor="@color/colorPrimaryDark"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_msg_board_item_time"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="25dp"
            android:text="@string/app_test"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_gray_deep"
            android:gravity="center_vertical"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_msg_board_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_large"
        android:text="@string/app_test"
        android:textSize="@dimen/text_main_title"
        android:textColor="@color/color_black_text"
        />
    <include layout="@layout/include_slid_img"/>
</LinearLayout>