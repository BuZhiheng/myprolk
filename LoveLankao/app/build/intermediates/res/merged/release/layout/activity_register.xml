<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_login_username"
                />
            <EditText
                android:id="@+id/et_register_username"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:inputType="number"
                android:maxLength="11"
                android:hint="请输入手机号"
                android:textColorHint="@color/color_gray"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_green"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_login_password"
                />
            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:hint="请输入密码"
                android:textColorHint="@color/color_gray"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_green"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_login_password"
                />
            <EditText
                android:id="@+id/et_register_password_sure"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:hint="请确认密码"
                android:textColorHint="@color/color_gray"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_green"/>
        <LinearLayout
            android:id="@+id/ll_register_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_register_nickname"
                />
            <EditText
                android:id="@+id/et_register_nickname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:hint="请输入昵称"
                android:textColorHint="@color/color_gray"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_register_nickname_slid"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_green"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_register_code"
                />
            <EditText
                android:id="@+id/et_register_code"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="60dp"
                android:inputType="number"
                android:hint="请输入验证码"
                android:textColorHint="@color/color_gray"
                />
            <Button
                android:id="@+id/btn_register_getcode"
                android:layout_gravity="right|center_vertical"
                android:layout_width="100dp"
                android:layout_height="@dimen/common_title_height30"
                android:text="获取"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_white"
                android:background="@color/color_green"
                />
        </FrameLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_green"/>
        <Button
            android:id="@+id/btn_register_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@color/color_green"
            android:text="注册"
            android:textSize="@dimen/text_main_title"
            android:textColor="@color/color_white"
            />
        <TextView
            android:id="@+id/tv_register_cancle"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="30dp"
            android:text="取消"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_gray_deep"
            />
    </LinearLayout>
</LinearLayout>