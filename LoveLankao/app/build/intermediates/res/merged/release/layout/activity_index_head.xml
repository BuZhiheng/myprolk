<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_indexfrm_head"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_indexfrm_headview_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher"
        />
    <FrameLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_margin"
        android:background="@color/color_alpha_black">
        <TextView
            android:id="@+id/tv_indexfrm_headview_title"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_title_height"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_white"
            />
        <TextView
            android:id="@+id/tv_indexfrm_headview_index"
            android:layout_gravity="center_vertical|right"
            android:layout_width="@dimen/common_title_height"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_white"
            />
    </FrameLayout>
</FrameLayout>