<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_act"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        />
    <ImageView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="50dp"
        android:background="@color/color_gray"
        />
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_main_index"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_main_index"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_main_indexc"
                />
            <TextView
                android:id="@+id/tv_main_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_index"
                android:textSize="26px"
                android:textColor="@color/color_green"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_talk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_main_talk"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_main_talk"
                />
            <TextView
                android:id="@+id/tv_main_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_talk"
                android:textSize="26px"
                android:textColor="@color/color_black_text"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_lbs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_main_lbs"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_main_lbs"
                />
            <TextView
                android:id="@+id/tv_main_lbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_lbs"
                android:textSize="26px"
                android:textColor="@color/color_black_text"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_main_user"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_main_mine"
                />
            <TextView
                android:id="@+id/tv_main_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_mine"
                android:textSize="26px"
                android:textColor="@color/color_black_text"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>