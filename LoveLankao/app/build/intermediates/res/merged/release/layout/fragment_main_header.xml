<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            >
            <LinearLayout
                android:id="@+id/ll_mainfrm_header_chihewanle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/ic_mainfrm_title"
                    android:layout_height="@dimen/ic_mainfrm_title"
                    android:src="@drawable/ic_mainfrm_chihewanle"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_mainfrm_chihewanle"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mainfrm_header_women"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/ic_mainfrm_title"
                    android:layout_height="@dimen/ic_mainfrm_title"
                    android:src="@drawable/ic_mainfrm_women"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_mainfrm_women"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mainfrm_header_offer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/ic_mainfrm_title"
                    android:layout_height="@dimen/ic_mainfrm_title"
                    android:src="@drawable/ic_mainfrm_offer"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_mainfrm_offer"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mainfrm_header_zulin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/ic_mainfrm_title"
                    android:layout_height="@dimen/ic_mainfrm_title"
                    android:src="@drawable/ic_mainfrm_zu"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_mainfrm_zulin"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mainfrm_header_friend"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/ic_mainfrm_title"
                    android:layout_height="@dimen/ic_mainfrm_title"
                    android:src="@drawable/ic_mainfrm_friend"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_mainfrm_friend"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_mainfrm_header_hunqing"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/ic_mainfrm_title"
                    android:layout_height="@dimen/ic_mainfrm_title"
                    android:src="@drawable/ic_mainfrm_hunqing"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_mainfrm_hunqing"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mainfrm_header_fangchan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/ic_mainfrm_title"
                    android:layout_height="@dimen/ic_mainfrm_title"
                    android:src="@drawable/ic_mainfrm_fangchan"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_mainfrm_fangchan"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mainfrm_header_service"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/ic_mainfrm_title"
                    android:layout_height="@dimen/ic_mainfrm_title"
                    android:src="@drawable/ic_mainfrm_service"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_mainfrm_service"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mainfrm_header_jingcailankao"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/ic_mainfrm_title"
                    android:layout_height="@dimen/ic_mainfrm_title"
                    android:src="@drawable/ic_mainfrm_jingcai"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_mainfrm_jingcai"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mainfrm_header_other"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/ic_mainfrm_title"
                    android:layout_height="@dimen/ic_mainfrm_title"
                    android:src="@drawable/ic_mainfrm_other"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_mainfrm_other"
                    />
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/include_slid_img_height5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="热门活动"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_mainfrm_header_mingqi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="39dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_mainfrm_conpon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="名企名商"
                    android:textSize="@dimen/text_main_title"
                    android:textColor="@color/color_gray_deep"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mainfrm_conponlit"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="在兰考,他们最有名!"
                    android:textSize="@dimen/text_common_item_content"
                    android:textColor="@color/color_gray_deep"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_bg"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_mainfrm_tehui"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_mainfrm_open"
                    android:text="特惠不打烊"
                    android:textSize="@dimen/text_main_title"
                    android:textColor="@color/color_gray_deep"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_bg"/>
                <TextView
                    android:id="@+id/tv_mainfrm_tuiian"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_mainfrm_tuijian"
                    android:text="精品推荐"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray_deep"
                    />
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/include_slid_img_height5"/>
        <FrameLayout
            android:id="@+id/fl_mainfrm_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_ll_bg"
            android:paddingBottom="@dimen/common_margin"
            android:paddingTop="@dimen/common_margin"
            android:clickable="true">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="金牌商家"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_black_text"
                />
            <TextView
                android:layout_gravity="center_vertical|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="查看更多"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_green"
                />
            <ImageView
                android:layout_gravity="center_vertical|right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="@dimen/common_margin"
                android:src="@drawable/ic_common_right_green"/>
        </FrameLayout>
        <include layout="@layout/include_slid_img"/>
    </LinearLayout>
</LinearLayout>