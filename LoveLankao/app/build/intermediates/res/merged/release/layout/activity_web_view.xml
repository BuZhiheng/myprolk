<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_webview_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_green"
        >
        <TextView
            android:id="@+id/tv_webview_title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网页"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_main_title"
            />
        <ImageView
            android:id="@+id/iv_webview_back"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_common_back_white"/>
        <ImageView
            android:id="@+id/iv_webview_share"
            android:layout_gravity="center_vertical|right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@drawable/ic_webviewact_share"/>

    </FrameLayout>
    <WebView
        android:id="@+id/web_webview_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>