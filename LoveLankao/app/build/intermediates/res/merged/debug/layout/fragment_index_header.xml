<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner_indexfrm"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:canLoop="true"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_indexfrm_service"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scrollbars="none"
        />
    <include layout="@layout/include_slid_img_height5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_indexfrm_more_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/common_ll_bg"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="聊天室"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <ImageView
                        android:layout_gravity="center|right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:src="@drawable/ic_indexfrm_chat"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:text="进来聊聊吧"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray"
                    />
            </LinearLayout>
            <include layout="@layout/include_slid_img_vertical_margintop"/>
            <LinearLayout
                android:id="@+id/ll_indexfrm_more_lkpeople"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/common_ll_bg"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兰考人"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <ImageView
                        android:layout_gravity="center|right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:src="@drawable/ic_common_map_meishi"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:text="老乡们都在哪"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray"
                    />
            </LinearLayout>
            <include layout="@layout/include_slid_img_vertical_margintop"/>
            <LinearLayout
                android:id="@+id/ll_indexfrm_more_road"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/common_ll_bg"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="路况"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <ImageView
                        android:layout_gravity="center|right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:src="@drawable/ic_indexfrm_road"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:text="兰考实时路况"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray"
                    />
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/include_slid_img_margin_lr"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_indexfrm_more_bike"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/common_ll_bg"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="绿色出行"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <ImageView
                        android:layout_gravity="center|right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:src="@drawable/ic_indexfrm_bike"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:text="公共自行车！"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray"
                    />
            </LinearLayout>
            <include layout="@layout/include_slid_img_vertical_marginbottom"/>
            <LinearLayout
                android:id="@+id/ll_indexfrm_more_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/common_ll_bg"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="找菜谱"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <ImageView
                        android:layout_gravity="center|right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:src="@drawable/ic_indexfrm_menu"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:text="今天的饭我来!"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray"
                    />
            </LinearLayout>
            <include layout="@layout/include_slid_img_vertical_marginbottom"/>
            <LinearLayout
                android:id="@+id/ll_indexfrm_more_jock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/common_ll_bg"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="笑话"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <ImageView
                        android:layout_gravity="center|right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:src="@drawable/ic_indexfrm_jock"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:text="一笑十年少"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/include_slid_img_height5"/>
    <FrameLayout
        android:id="@+id/fl_indexfrm_more_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_ll_bg"
        android:paddingBottom="@dimen/common_margin"
        android:paddingTop="@dimen/common_margin"
        android:clickable="true">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="兰考头条"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
        <TextView
            android:layout_gravity="center_vertical|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="查看更多"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_green"
            />
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@drawable/ic_common_right_green"/>
    </FrameLayout>
</LinearLayout>