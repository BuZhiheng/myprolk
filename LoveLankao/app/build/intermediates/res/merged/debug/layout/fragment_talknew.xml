<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_green"
        >
        <TextView
            android:id="@+id/tv_talkfrm_my"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/common_margin"
            android:gravity="center"
            android:text="与我相关"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_white"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_talk"
            android:textSize="@dimen/text_main_title"
            android:textColor="@color/color_white"
            />
        <LinearLayout
            android:id="@+id/ll_talkfrm_send"
            android:layout_gravity="right"
            android:layout_width="@dimen/common_title_height"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_quan_camera"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发帖"
                android:textSize="@dimen/text_common_item_content"
                android:textColor="@color/color_white"
                />
        </LinearLayout>
    </FrameLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_square_frm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_title_height"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_square_frm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />
    </android.support.v4.widget.SwipeRefreshLayout>
    <TextView
        android:id="@+id/tv_squarefrm_msg"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_tv_square_msg"
        android:padding="@dimen/common_margin_little"
        android:text="您有新消息"
        android:textSize="@dimen/text_common_item_title"
        android:textColor="@color/color_yellow"
        android:clickable="true"
        android:visibility="gone"
        />
</FrameLayout>