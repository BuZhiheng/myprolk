<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_green"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻详情"
            android:textSize="@dimen/text_main_title"
            android:textColor="@color/color_white"
            />
        <ImageView
            android:id="@+id/iv_lknewsmsg_back"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_common_back_white"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_lknewsmsg_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_margin"
                android:gravity="center"
                android:textSize="@dimen/text_main_title"
                android:textColor="@color/color_black_text"
                />
            <TextView
                android:id="@+id/tv_lknewsmsg_fromtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/common_margin"
                android:textSize="@dimen/text_common_item_content"
                android:textColor="@color/color_gray_deep"
                />
            <include layout="@layout/include_slid_img"/>
            <ImageView
                android:id="@+id/iv_lknewsmsg_photo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="@dimen/common_margin"
                />
            <TextView
                android:id="@+id/tv_lknewsmsg_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/common_margin"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_black_text"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>