<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_cook_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_cook_item_photo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/common_margin"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_common_defult" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_cook_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:textColor="@color/color_black_text"
                android:textSize="@dimen/text_common_item_title" />
            <TextView
                android:id="@+id/tv_cook_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin"
                android:textColor="@color/color_gray_deep"
                android:textSize="@dimen/text_common_item_content" />
            <TextView
                android:id="@+id/tv_cook_item_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_green"
                android:textSize="@dimen/text_common_item_content" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/include_slid_img_marginleft"/>
</LinearLayout>