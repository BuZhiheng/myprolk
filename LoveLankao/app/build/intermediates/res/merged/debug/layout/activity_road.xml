<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_road"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include layout="@layout/include_title_bar_common"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_title_height"
        android:paddingLeft="@dimen/common_margin"
        android:background="@color/color_alpha_gray"
        android:text="道路显绿色表示畅通,黄色表示拥堵,红色表示堵车;紫色阴影表示人口分布比较密集"
        />
</FrameLayout>