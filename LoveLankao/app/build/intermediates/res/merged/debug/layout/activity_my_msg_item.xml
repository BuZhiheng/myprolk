<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_square_msg_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height39"
        android:layout_marginTop="@dimen/common_margin"
        >
        <ImageView
            android:id="@+id/iv_square_comment_photo"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/common_title_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_square_comment_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_test"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/tv_square_comment_usertype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_little"
                android:layout_marginRight="@dimen/common_margin"
                android:background="@drawable/common_vip_type"
                android:text=""
                android:textSize="@dimen/text_common_item_content"
                android:textColor="@color/color_yellow_vip"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_square_comment_time"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_title_height"
            android:text="@string/app_test"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_gray_deep"
            android:gravity="center_vertical"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_square_comment_recomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_title_height"
        android:layout_marginRight="@dimen/common_title_height"
        android:layout_marginTop="@dimen/common_margin"
        android:text="@string/app_test"
        android:textSize="@dimen/text_common_item_content"
        android:textColor="@color/color_gray_deep"
        android:textStyle="italic"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_square_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_title_height"
        android:layout_marginRight="@dimen/common_title_height"
        android:layout_marginTop="@dimen/common_margin"
        android:text="@string/app_test"
        android:textSize="@dimen/text_common_item_title"
        android:textColor="@color/color_black_text"
        />
    <TextView
        android:id="@+id/tv_square_comment_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_title_height"
        android:layout_marginRight="@dimen/common_title_height"
        android:layout_marginTop="@dimen/common_margin"
        android:text="(原文)阿萨德撒"
        android:textSize="@dimen/text_common_item_content"
        android:textColor="@color/color_green"
        android:textStyle="italic"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="@dimen/common_margin_little"
        android:layout_marginLeft="@dimen/common_title_height"
        android:background="@color/color_gray"
        />
</LinearLayout>