<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="发帖"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_main_title" />

        <ImageView
            android:id="@+id/iv_squaresend_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_common_back_white" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_margin"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="输入标题"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"/>
        <EditText
            android:id="@+id/et_square_send_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:background="@drawable/common_tv_chat"
            android:gravity="top" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="输入内容"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"/>
        <EditText
            android:id="@+id/et_square_send_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:background="@drawable/common_tv_chat"
            android:gravity="top" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_title_height39"
            android:layout_marginTop="@dimen/common_margin_large"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_square_choose_photo1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_common_addimg"
                />
            <ImageView
                android:id="@+id/iv_square_choose_photo2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_common_addimg"
                />
            <ImageView
                android:id="@+id/iv_square_choose_photo3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_common_addimg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_title_height39"
            android:layout_marginTop="@dimen/common_margin_large"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_square_choose_photo4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_common_addimg"
                />
            <ImageView
                android:id="@+id/iv_square_choose_photo5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_common_addimg"
                />
            <ImageView
                android:id="@+id/iv_square_choose_photo6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_common_addimg"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:text="最多可以上传6张图片,不上传也可以哦"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_gray_deep"/>
        <Button
            android:id="@+id/btn_square_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:background="@drawable/common_tv_chat"
            android:text="发表"
            android:textColor="@color/color_green"
            />
    </LinearLayout>
</LinearLayout>
