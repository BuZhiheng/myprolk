<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_title_bar_common"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_margin"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="请输入留言"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"/>
        <EditText
            android:id="@+id/et_msg_board_send"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="5dp"
            android:hint="最多输入50个字!"
            android:layout_margin="@dimen/common_margin"
            android:background="@drawable/common_tv_chat"
            android:gravity="top" />
        <LinearLayout
            android:id="@+id/ll_msg_board_send_check"
            android:layout_margin="@dimen/common_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:onClick="onClick"
            >
            <ImageView
                android:id="@+id/iv_msg_board_send_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="匿名留言"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:text="警告:"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_yellow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:text="1.严禁一切形式的广告留言"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_yellow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:text="2.请发表积极,健康,向上的言论"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_yellow"/>
        <Button
            android:id="@+id/btn_msg_board_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:background="@drawable/common_tv_chat"
            android:text="确定"
            android:textColor="@color/color_green"
            android:onClick="onClick"
            />
    </LinearLayout>
</LinearLayout>