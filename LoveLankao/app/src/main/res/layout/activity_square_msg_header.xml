<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/common_margin"
            >
            <ImageView
                android:id="@+id/iv_square_item_photo"
                android:layout_gravity="center_vertical"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:src="@drawable/ic_launcher"/>
            <LinearLayout
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_square_item_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/app_test"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/tv_square_item_usertype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin_little"
                    android:layout_marginRight="@dimen/common_margin"
                    android:background="@drawable/common_vip_type"
                    android:paddingBottom="1dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/text_common_item_content"
                    android:textColor="@color/color_yellow_vip"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_square_item_time"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="25dp"
                android:text="@string/app_test"
                android:textSize="@dimen/text_common_item_content"
                android:textColor="@color/color_gray_deep"
                android:gravity="center_vertical"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/tv_square_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:text="@string/app_test"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black"
            />
        <TextView
            android:id="@+id/tv_square_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginBottom="@dimen/common_margin"
            android:text="@string/app_test"
            android:textColor="@color/color_black_text"
            />
        <LinearLayout
            android:id="@+id/ll_square_item_photo1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/iv_square_item_photo1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/iv_square_item_photo2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_margin_little"
                android:layout_marginRight="@dimen/common_margin_little"
                />
            <ImageView
                android:id="@+id/iv_square_item_photo3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_square_item_photo2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/common_margin_little"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/iv_square_item_photo4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/iv_square_item_photo5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_margin_little"
                android:layout_marginRight="@dimen/common_margin_little"
                />
            <ImageView
                android:id="@+id/iv_square_item_photo6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_title_height30"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_square_item_commenttimes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                android:onClick="onClick"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_square_commenttimes"/>
                <TextView
                    android:id="@+id/tv_square_item_commenttimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/color_gray_deep"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_margin_little"
                android:layout_marginBottom="@dimen/common_margin_little"
                android:background="@color/color_bg"
                />
            <LinearLayout
                android:id="@+id/ll_square_item_liketimes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:onClick="onClick"
                android:background="@drawable/common_ll_bg"
                >
                <ImageView
                    android:id="@+id/iv_square_item_liketimes"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_square_liketimes"/>
                <TextView
                    android:id="@+id/tv_square_item_liketimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/color_gray_deep"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_margin_little"
                android:layout_marginBottom="@dimen/common_margin_little"
                android:background="@color/color_bg"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/common_ll_bg"
                android:gravity="center"
                android:onClick="onClick"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_square_click"/>
                <TextView
                    android:id="@+id/tv_square_item_clicktimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/color_gray_deep"
                    />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bg"
            >
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin_little"
                android:layout_marginBottom="@dimen/common_margin_little"
                android:text="评论"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_black_text"
                />
            <TextView
                android:id="@+id/tv_square_comment_writecomment"
                android:layout_gravity="center_vertical|right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin_little"
                android:layout_marginBottom="@dimen/common_margin_little"
                android:text="写评论"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_green"
                android:onClick="onClick"
                />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>