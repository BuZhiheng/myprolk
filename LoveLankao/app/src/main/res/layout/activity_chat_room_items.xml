<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/common_margin"
    android:paddingRight="@dimen/common_margin"
    android:paddingTop="@dimen/common_margin_large"
    android:paddingBottom="@dimen/common_margin_little"
    >
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_chatroom_photo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_chat_item_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_test"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <TextView
                    android:id="@+id/tv_chat_item_usertype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin_little"
                    android:layout_marginRight="@dimen/common_margin"
                    android:background="@drawable/common_vip_type"
                    android:paddingBottom="1dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/text_common_item_content"
                    android:textColor="@color/color_yellow_vip"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_chat_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_little"
            android:text="@string/app_name"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_gray_deep"
            />
        <TextView
            android:id="@+id/tv_chat_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_little"
            android:layout_marginRight="@dimen/common_margin_large"
            android:padding="5dp"
            android:background="@drawable/common_tv_chat"
            android:text="@string/app_name"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
    </LinearLayout>
</LinearLayout>