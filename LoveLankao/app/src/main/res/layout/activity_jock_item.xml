<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_jock_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_large"
        android:layout_marginRight="@dimen/common_margin_large"
        android:layout_marginTop="@dimen/common_margin"
        android:text="@string/app_test"
        android:textColor="@color/color_black_text"
        android:textSize="@dimen/text_common_item_title" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_jock_item_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin"
            android:layout_marginLeft="@dimen/common_margin_large"
            android:text="点击分享"
            android:textColor="@color/color_gray_deep"
            android:textSize="@dimen/text_common_item_content" />
        <TextView
            android:id="@+id/tv_jock_item_time"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:text="@string/app_test"
            android:textColor="@color/color_gray_deep"
            android:textSize="@dimen/text_common_item_content" />
    </FrameLayout>
    <include layout="@layout/include_slid_img_height10"/>
</LinearLayout>