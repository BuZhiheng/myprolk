<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_activity_shoploc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_green"
        >
        <TextView
            android:id="@+id/tv_shoploc_title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位置"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_main_title"
            />
        <ImageView
            android:id="@+id/iv_shoploc_back"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_common_back_white"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tv_shoploc_nvg"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height39"
        android:gravity="center"
        android:background="@color/color_green"
        android:text="导航"
        android:textSize="@dimen/text_common_item_title"
        android:textColor="@color/color_white"
        />
</FrameLayout>