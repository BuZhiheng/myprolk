<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_mainfrm_content"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_mainfrm_item_photo"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/common_margin"
        android:src="@drawable/ic_common_defult" />

    <TextView
        android:id="@+id/tv_mainfrm_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_black_text"
        android:textSize="@dimen/text_common_item_title" />

    <TextView
        android:id="@+id/tv_mainfrm_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/color_gray_deep"
        android:textSize="@dimen/text_common_item_content" />

    <TextView
        android:id="@+id/tv_mainfrm_item_titlecontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="119dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/color_gray_deep"
        android:textSize="@dimen/text_common_item_content" />

    <TextView
        android:id="@+id/tv_mainfrm_item_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="119dp"
        android:text=""
        android:textColor="@color/color_green"
        android:textSize="@dimen/text_common_item_title" />

    <TextView
        android:id="@+id/tv_mainfrm_item_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/color_gray_deep"
        android:textSize="@dimen/text_common_item_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@color/color_gray" />
</FrameLayout>