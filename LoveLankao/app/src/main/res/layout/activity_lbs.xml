<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_lbs_act"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_green">

        <TextView
            android:id="@+id/tv_lbsact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="全部商家"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_main_title" />

        <ImageView
            android:id="@+id/iv_lbsact_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_common_back_white" />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_title_height"
        android:paddingLeft="@dimen/common_margin"
        android:background="#88cccccc"
        android:text="点击地图中红色标记查看详情"
        />
</FrameLayout>