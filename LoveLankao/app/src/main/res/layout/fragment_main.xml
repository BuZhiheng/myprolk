<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_green">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/main_lbs"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_main_title" />
        <TextView
            android:id="@+id/tv_mainfrm_toall"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/common_margin"
            android:gravity="center"
            android:text="兰考图"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_bg"
            />
    </FrameLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_main_frm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar_main_frm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll"
                    android:orientation="vertical"
                    >
                    <include
                        layout="@layout/fragment_main_header"/>
                </LinearLayout>
            </android.support.design.widget.AppBarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >
                <FrameLayout
                    android:id="@+id/fl_mainfrm_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_ll_bg"
                    android:paddingBottom="@dimen/common_margin"
                    android:paddingTop="@dimen/common_margin"
                    android:clickable="true">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:text="金牌商家"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <TextView
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:text="查看更多"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_green"
                        />
                    <ImageView
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="@dimen/common_margin"
                        android:src="@drawable/ic_common_right_green"/>
                </FrameLayout>
                <include layout="@layout/include_slid_img"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_mainfrm_shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    />
            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>